generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Item {
  id      String       @id @default(uuid())
  name    String       @unique
  recipes Recipe[]
  usedIn  Ingredient[]

  @@map("Items")
}

model Recipe {
  id          String       @id @default(uuid())
  item        Item         @relation(fields: [itemId], references: [id])
  itemId      String
  time        Float
  ingredients Ingredient[]

  @@map("Recipes")
}

model Ingredient {
  id       String @id @default(uuid())
  recipe   Recipe @relation(fields: [recipeId], references: [id], onDelete: Cascade)
  recipeId String
  item     Item   @relation(fields: [itemId], references: [id])
  itemId   String
  quantity Int

  @@map("Ingredients")
}
