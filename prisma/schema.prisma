generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model Item {
  id      String       @id @default(uuid())
  name    String
  recipes Recipe[]
  usedIn  Ingredient[]

  @@map("Items")
}

model Recipe {
  id          String       @id @default(uuid())
  item        Item         @relation(fields: [itemId], references: [id], onDelete: Cascade)
  itemId      String
  quantity    Int
  time        Float
  ingredients Ingredient[]

  @@map("Recipes")
}

model Ingredient {
  id       String   @id @default(uuid())
  item     Item     @relation(fields: [itemId], references: [id], onDelete: Cascade)
  itemId   String
  quantity Int
  recipes  Recipe[]

  @@unique(name: "itemId_quantity", fields: [itemId, quantity])
  @@map("Ingredients")
}

// TODO: Add a onDelete: Cascade to resourceId (split into 2 relations of each type)

model Node {
  id   String @id @default(uuid())
  name String

  type       NodeType
  resourceId String?

  children Node[] @relation("NodeChildren")
  parent   Node?  @relation("NodeChildren", fields: [parentId], references: [id], onDelete: Cascade)

  parentId String?
  order    Int

  @@index([parentId, order])
  @@index([type, resourceId])
  @@map("Nodes")
}

enum NodeType {
  folder
  item
  recipe
}
